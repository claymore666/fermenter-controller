# Serial Port Configuration
MODBUS_PORT=/dev/ttyUSB0
# Alternative: COM3 (Windows) oder /dev/pts/X (Virtual PTY)
MODBUS_BAUDRATE=9600
MODBUS_PARITY=N
MODBUS_STOPBITS=1
MODBUS_SLAVE_ID=1

# ESP32 Timing Simulation
RESPONSE_DELAY_MS=10
RESPONSE_JITTER_MS=2
SENSOR_UPDATE_RATE_MS=100
USE_REALISTIC_TIMING=true

# Sensor Noise Configuration
SENSOR_NOISE_PERCENT=2.0
NOISE_TYPE=gaussian
# gaussian oder uniform
NOISE_SEED=42
# Optional: für reproduzierbare Tests

# Pressure Sensor 1
CH1_ENABLED=true
CH1_START_PRESSURE=0.5
CH1_TARGET_PRESSURE=0.5
CH1_RATE_BAR_PER_MIN=100.0
CH1_AUTO_START=true

# Pressure Sensor 2
CH2_ENABLED=true
CH2_START_PRESSURE=1.5
CH2_TARGET_PRESSURE=1.5
CH2_RATE_BAR_PER_MIN=10.0
CH2_AUTO_START=true

# MODBUS Hub (Promiscuous Mode)
HUB_ENABLED=true
HUB_PROMISCUOUS_MODE=true
TRIGGER_SLAVE_ID=2
# Slave ID des Digital Output Moduls
TRIGGER_REGISTER=0
# Coil-Adresse für Solenoid
TRIGGER_VALUE=1
# 1 = ON, 0 = OFF
PRESSURE_DROP_RATE=0.025
# bar/sekunde (default 0.025, can be changed at runtime)
PRESSURE_DROP_DURATION_S=5.0
AFFECTED_SENSOR=1
# 1 oder 2

# Web Server
WEB_HOST=0.0.0.0
WEB_PORT=8080
WEB_UPDATE_INTERVAL_MS=500
ENABLE_WEBSOCKET=true
ENABLE_DEBUG_MODE=false
DEBUG_LOG_EVERY_REQUEST=false
DEBUG_LOG_TIMING_DETAILS=true
